// Web component template for frontend services.
package components

import "opmodel.dev/core@v0"

// _web is a reusable web server component template.
_web: core.#Component & {
	metadata: {
		name:        "web"
		description: "Web frontend component"
	}
	spec: {
		container: {
			image: string
			ports: [{containerPort: 8080}]
			resources: {
				requests: {
					cpu:    "100m"
					memory: "128Mi"
				}
				limits: {
					cpu:    "500m"
					memory: "512Mi"
				}
			}
		}
		replicas: int | *2
	}
}
